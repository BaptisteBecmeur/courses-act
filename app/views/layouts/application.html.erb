<!-- js popover -->
  <script >
    $(document).ready(function(){
    $(".img-popover").popover({
    html: true,
    trigger: "hover",
    placement: "right"
    });
    })
  </script>

  <!-- js flipcard -->

  <script>
    $('.flip').click(function(){
        $(this).find('.card').addClass('flipped').mouseleave(function(){
            $(this).removeClass('flipped');
        });
        return false;
    });
  </script>
