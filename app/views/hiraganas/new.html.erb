<div class="container">
  <div class="row">
    <div class= "col-md-8 col-md-offset-2">

      <h1 class="text-center">Création Cartes</h1>
      <%= simple_form_for @hiragana do |f| %>
        <%= f.error_notification %>
        <%= f.input :ideoone, label: "Ideogramme Hiragana" %>
         <%= f.input :ideotwo, label: "Ideogramme Katakana" %>
        <div class="row">
        <div class="col-sm-6">
          <%= f.input :randomletter, label: "Lettre alphabet", placeholder: "toutes lettres" %>
        </div>
        <div class="col-sm-6">
        <%= f.input :upletter, label: "Lettre en langue latine", placeholder: "a, e, i, o, u" %>
        </div>
        <%= f.input :transcription, label: "transcription en langue latine" %>
         <%= f.input :audioclick, label: "son" %>
        <%= f.submit "Créer", class: "btn btn-primary" %>
      <% end %>
      <h4 class="text-center">
        <%= link_to '< Retour', :back, class: "btn btn-default" %>
      </h4>

    </div>
  </div>
</div>
